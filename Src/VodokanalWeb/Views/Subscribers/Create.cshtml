@model VodokanalWeb.Models.Subscriber
@{
    ViewData["Title"] = "Добавить абонента";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-plus-fill me-2 fs-4"></i>
                        <h4 class="mb-0">Добавить нового абонента</h4>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-badge me-2"></i>Основная информация
                            </h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="AccountNumber" class="form-label required"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-hash"></i></span>
                                        <input asp-for="AccountNumber" class="form-control" placeholder="Введите номер счета" required />
                                    </div>
                                    <span asp-validation-for="AccountNumber" class="text-danger small"></span>
                                    <div class="form-text">Уникальный номер счета абонента</div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="SubscriberTypeId" class="form-label required"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-tags"></i></span>
                                        <select asp-for="SubscriberTypeId" class="form-select" required>
                                            <option value="">-- Выберите тип --</option>
                                            @if (ViewBag.SubscriberTypes != null)
                                            {
                                                foreach (var type in ViewBag.SubscriberTypes)
                                                {
                                                    <option value="@type.Id">@type.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="SubscriberTypeId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-vcard me-2"></i>Персональные данные
                            </h5>

                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="FullName" class="form-label required"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input asp-for="FullName" class="form-control" placeholder="ФИО или наименование организации" required />
                                    </div>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Address" class="form-label required"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                        <input asp-for="Address" class="form-control" placeholder="Полный адрес" required />
                                    </div>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-telephone me-2"></i>Контактная информация
                            </h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label required"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                        <input asp-for="Phone" class="form-control" placeholder="+7 (XXX) XXX-XX-XX" required />
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-bank me-2"></i>Финансовые реквизиты
                            </h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="PersonalAccount" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                        <input asp-for="PersonalAccount" class="form-control" placeholder="Лицевой счет" />
                                    </div>
                                    <span asp-validation-for="PersonalAccount" class="text-danger small"></span>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="INN" class="form-label"></label>
                                    <input asp-for="INN" class="form-control" placeholder="ИНН" maxlength="12" />
                                    <span asp-validation-for="INN" class="text-danger small"></span>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="KPP" class="form-label"></label>
                                    <input asp-for="KPP" class="form-control" placeholder="КПП" maxlength="9" />
                                    <span asp-validation-for="KPP" class="text-danger small"></span>
                                    <div class="form-text">Только для юр. лиц</div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Balance" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">₽</span>
                                        <input asp-for="Balance" class="form-control" value="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Balance" class="text-danger small"></span>
                                    <div class="form-text">Начальный баланс</div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-light p-3 mt-4 rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Вернуться к списку
                                </a>

                                <div class="btn-group">
                                    <button type="reset" class="btn btn-warning">
                                        <i class="bi bi-arrow-clockwise me-1"></i>Очистить
                                    </button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle me-1"></i>Создать абонента
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <div class="d-flex">
                    <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                    <div>
                        <h5 class="alert-heading">Информация</h5>
                        <p class="mb-1">• Обязательные поля отмечены звездочкой (*)</p>
                        <p class="mb-1">• После создания абонента вы сможете добавить счетчики и выполнить другие операции</p>
                        <p class="mb-0">• Проверьте правильность введенных данных перед сохранением</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required::after {
            content: " *";
            color: #dc3545;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .btn-success {
            background-color: #198754;
            border-color: #198754;
        }

            .btn-success:hover {
                background-color: #157347;
                border-color: #146c43;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        document.addEventListener('DOMContentLoaded', function () {
            const phoneInput = document.querySelector('input[name="Phone"]');

            if (phoneInput) {
                phoneInput.addEventListener('input', function (e) {
                    let value = e.target.value.replace(/\D/g, '');

                    if (value.length > 0) {
                        if (!value.startsWith('7') && !value.startsWith('8')) {
                            value = '7' + value;
                        }

                        let formatted = '+7 (';

                        if (value.length > 1) {
                            formatted += value.substring(1, 4);
                        }

                        if (value.length >= 4) {
                            formatted += ') ' + value.substring(4, 7);
                        }

                        if (value.length >= 7) {
                            formatted += '-' + value.substring(7, 9);
                        }

                        if (value.length >= 9) {
                            formatted += '-' + value.substring(9, 11);
                        }

                        e.target.value = formatted;
                    }
                });
            }

            const accountInput = document.querySelector('input[name="AccountNumber"]');
            if (accountInput && !accountInput.value) {
                const prefix = 'АБ-';
                const timestamp = Date.now().toString().slice(-6);
                accountInput.value = prefix + timestamp;
            }
        });
    </script>
}
