@model IEnumerable<VodokanalWeb.Models.Subscriber>
@{
    ViewData["Title"] = "Абоненты";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Абоненты</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить абонента
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" name="searchString"
                           value="@ViewBag.SearchString" placeholder="Поиск по ФИО, адресу или телефону">
                </div>
                <div class="col-md-4">
                    <select class="form-select" name="subscriberType">
                        <option value="">Все типы</option>
                        @if (ViewBag.SubscriberTypes != null)
                        {
                            foreach (var type in ViewBag.SubscriberTypes)
                            {
                                <option value="@type.Id" selected="@(ViewBag.SubscriberType == type.Id.ToString() ? "selected" : null)">
                                    @type.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Поиск</button>
                </div>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>№ счета</th>
                            <th>ФИО/Название</th>
                            <th>Адрес</th>
                            <th>Телефон</th>
                            <th>Email</th>
                            <th>Баланс</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AccountNumber</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge @(item.Balance >= 0 ? "bg-success" : "bg-danger")">
                                            @item.Balance.ToString("C2")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-info" title="Просмотр">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning" title="Редактировать">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger" title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">Нет данных об абонентах</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", new { page = i, searchString = ViewBag.SearchString, subscriberType = ViewBag.SubscriberType })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }

            <div class="text-muted text-center mt-3">
                Показано @Model?.Count() из @ViewBag.TotalItems абонентов
            </div>
        </div>
    </div>
</div>
