@model VodokanalWeb.Models.Subscriber
@{
    ViewData["Title"] = "Редактирование абонента";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil-square"></i> Редактирование абонента</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AccountNumber" />
                        <input type="hidden" asp-for="Balance" />
                        <input type="hidden" asp-for="RegistrationDate" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Номер счета</label>
                                <input class="form-control" value="@Model.AccountNumber" disabled />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Текущий баланс</label>
                                <input class="form-control" value="@Model.Balance.ToString("N2") ₽" disabled />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                               
                                    <option value="Физическое лицо">Физическое лицо</option>
                                    <option value="Юридическое лицо">Юридическое лицо</option>
                              
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label">ФИО / Название организации</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label">Адрес</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Телефон</label>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PersonalAccount" class="form-label">Лицевой счет</label>
                                <input asp-for="PersonalAccount" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="INN" class="form-label">ИНН</label>
                                <input asp-for="INN" class="form-control" />
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Сохранить изменения
                            </button>
                            <a href="/Subscribers" class="btn btn-secondary ms-2">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                            <a href="/Subscribers/Details/@Model.Id" class="btn btn-info ms-2">
                                <i class="bi bi-eye"></i> Просмотр
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
